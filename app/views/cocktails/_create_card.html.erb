  <div class="create-card">
      <h3 class="card-title text-center">Add a new Cocktail</h3>
      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name, label: "Enter a cocktail name" %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.input :description %>
        <%= f.submit class:"btn btn-success submit-new-button"%>
      <% end %>
  </div>

