<div class="container">
  <h1>Create a new cocktail!</h1>
  <%= simple_form_for @cocktail do |f| %>
    <%= f.input :name, label: "Enter a name for your cocktail" %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit class:"btn btn-success"%>
    <%= link_to "Go home", cocktails_path, class:"btn btn-warning" %>
  <% end %>
</div>
