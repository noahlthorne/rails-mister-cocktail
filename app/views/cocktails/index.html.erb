<div class="nav"></div>
<div class="container">
  <div class="row justify-content-around"></div>
  <div>
      <h1>Cocktaaaaaaiiiiiils</h1>
      <%= cl_image_path("app/assets/images/Florida_Box_Turtle_Digon3_re-edited.jpg",
      width: 400, height: 300, crop: :fill) %>
      <% @cocktails.each do |cocktail| %>
         <div class="card col-3">
          <%= link_to "#{cocktail.name}", cocktail_path(cocktail) %>
          <% cocktail.ingredients.each do |ingredient| %>
             <p><%= ingredient.name %></p>
          <% end %>
          <%= link_to "Edit", edit_cocktail_path(cocktail), class:"btn btn-success" %>
          <%= link_to "Delete", cocktail_path(cocktail), method: :delete, class:"btn btn-danger" %>
        </div>
      <% end %>
    </div>
    <div class="card">
      <h2>Create a new Cocktail</h2>
        <%= simple_form_for @cocktail do |f| %>
          <%= f.input :name, label: "Enter a name for your cocktail" %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit class:"btn btn-success"%>
        <% end %>
    </div>
  </div>
</div>


